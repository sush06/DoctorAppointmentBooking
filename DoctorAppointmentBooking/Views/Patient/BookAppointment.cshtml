@using DoctorAppointmentBooking.DataAccess.Models;
@model BookAppointmentViewModel;

<!Doctype html>
<html>
<head>
    <title>Doctor appointment booking</title>
    <link rel="icon" type="image/x-icon" href="/images/logo1.jpeg">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            letter-spacing: 2px;
            line-height: 1.9;
            margin: 0px;
            border: 0px;
            color: black;
        }

        .docregClassimg {
            background-image: url("/images/registration.jpg");
            background-repeat: no-repeat;
            width: 1090px;
            height: 700px;
            align-items: center;
            padding-left: 0%;
            opacity: 0.7;
        }

        select {
            width: 200px;
            height: 30px;
            line-height: 50px;
            -webkit-appearance: menulist-button;
            -moz-appearance: none;
        }
    </style>
</head>
<body>

    <header>
        <div class="container mt-3">
            <h2><img src="/images/logo1.png" width="70" height="70" alt="logo">DOCTOR APPOINTMENT BOOKING</h2>
            <br />
        </div>
    </header>
    <!-- Nav tabs -->

    <ul class="nav nav-tabs" role="tablist">

        <li class="nav-item">
            <a class="nav-link" href="/Home/Index">Home</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="/Doctor/Insert">Doctor Registration</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="/Patient/Insert">Patient Registration</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="/Doctor/Login">Doctor Login</a>
        </li>

        <li class="nav-item">
            <a class="nav-link active" href="/Patient/Login">Patient Login</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="#sug">Suggestions and Feedback</a>
        </li>
    </ul><br />
    <!--page content-->
    <div class="docregClassimg">
        <br>
        <div style="padding:50px;">
            <div style="background-color: rgba(0, 0, 0, 0.4); height:500px;padding:30px;">
                <h4 style="text-align:center">Book Your Appointment!!</h4>
                <form onsubmit=" return Myfunction()" action="/Patient/BookAppointment" method ="post" style="padding: 30px;">
                    <label for="PatientId">Patient Name:</label>
                    <input type="text" id="PatientId" name="PatientId" style="width: 200px; border-radius: 6px; border-color: white;" placeholder=" Name"><br><br>
                    <label for="DoctorId">Doctor Name: </label>
                    <select id="DoctorId" name="DoctorId" style="border-radius: 4px; border-color: white;">
                        <option>--select--</option>
                        @foreach (Doctor doctor in Model.Doctors)
                        {
                            <option value="@doctor.DoctorId">@doctor.DoctorName - @doctor.Specialization</option>
                        }
                    </select><br><br>
                    <label for="Date" style="text-indent: 50px;">Date:</label>
                    <input type="date" id="Date" name="Date"style="width:200px; border-radius: 6px; border-color: white;height:30px; text-align:center "><br><br>
                    <label for="Time">Time:</label>
                    <select type="time" id="Time" name="Time" style="border-radius: 4px; border-color: white;">
                        <option>--select--</option>
                        <option value="9:00">9:00am to 9:30am</option>
                        <option>9:30am to 10:00am</option>
                        
                    </select><br><br><br>
                    <div style="padding-left:100px;">

                        <button type="submit" style="border-radius: 3px; color: white; background-color:rgb(251, 116, 130);border: 1px solid rgb(251, 116, 130); text-align:center; padding:5px; color:rgb(0, 0, 0)">Book Appointment</button>

                    </div>
                </form>
                <a href="/Patient/Homepage">Back to home</a>
                <script>
                            function Myfunction()
                            {
                                var patname = document.getElementById("name");
                                var docname = document.getElementById("docname");
                                var date = document.getElementById("Date");
                                var Time = document.getElementById("time");
                                if (patname.value == "" || docname.value == "" || date.value == "" || Time.value == "") {
                                    alert('please enter all the fields');
                                    return false;
                                }
                                else
                                {
                                    alert('Appointment is booked');
                                    return true;
                                }

                            }
                </script>
            </div>
        </div>
    </div>
</body>
</html>