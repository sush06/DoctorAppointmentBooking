                                    function validation()
                                        {
                                        var Email = document.getElementById("PatientEmail");
                                        var Name = document.getElementById("PatientName")
                                        var password = document.getElementById("PatientPassword");
                                        var date = document.getElementById("DOB");
                                        var Disease = document.getElementById("Disease");
                                            if(Email.value =="" || Name.value =="" || password.value=="" || date.value=="" || Disease.value=="")
